<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <label>名前:</label>
  <%= f.text_field :name,class:"panel panel-danger" %>

  <label>年齢:</label>
  <%= f.text_field :age,class:"panel panel-danger" %>
  
  <label>内容:</label>
  <%= f.text_field :body, :size =>"30x2",class:"panel panel-danger" %>
  
  
  <%= f.submit class: "btn btn-sm btn-danger" %>
  
  <nav>
  <ul class="pager">
  <li><%= link_to  "Home","/" %></li>
  </ul>
  </nav>
  
<% end %>